<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="10dp">
    <!-- ДАТА -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">
        <!-- ВРЕМЯ -->
        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!-- Парметр "ОТ" -->
            <TextView
                android:id="@+id/prev_time"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                android:textColor="#5533C7"
                android:text="8:10" />
            <!-- Парметр "ДО" -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="5dp"
                android:paddingBottom="5dp">
                <TextView
                    android:id="@+id/next_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:textColor="#5533C7"
                    android:text="9:30"
                    android:textSize="15sp"
                    android:textAlignment="center"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Полоска -->
        <View
            android:layout_marginLeft="5dp"
            android:background="#5533C7"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="1dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:orientation="vertical">
            <!-- НАЗВАНИЕ -->
            <TextView
                android:id="@+id/lessons_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Анализ и совершенствование бизнес-процессов"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="165dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <!-- У КОГО -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="У кого: "
                            android:textColor="#575757"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/lessons_who"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ПИ-18-3"
                            android:textColor="#575757"
                            android:textSize="15dp" />
                    </LinearLayout>
                    <!-- ГДЕ -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Где: "
                            android:textColor="#575757"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/campus"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="1 корпус, "
                            android:textColor="#575757"
                            android:textSize="15dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text=", "
                            android:textColor="#575757"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/lecture_hall"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="405 ауд."
                            android:textColor="#575757"
                            android:textSize="15dp" />

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right|center">

                    <TextView
                        android:id="@+id/lessons_type"
                        android:layout_width="90dp"
                        android:layout_height="25dp"
                        android:layout_marginRight="10dp"
                        android:text="Лекция"
                        android:gravity="center"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:background="@drawable/type_day"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#5533C7"/>
</LinearLayout>

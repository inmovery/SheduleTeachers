<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.SettingsScreen"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    android:id="@+id/linal">

    <TextView
        android:id="@+id/settings_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Экран настроек"
        android:textColor="#fff"
        android:textSize="25dp"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:textAlignment="center"/>
    <Button
        android:id="@+id/logout_btn"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:text="Выйти"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/open_push"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:text="Включить уведомления"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="invisible">
        <!-- ДАТА -->
        <TextView
            android:layout_width="327dp"
            android:layout_height="40dp"
            android:layout_below="@+id/logout_btn"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/box"
            android:paddingLeft="15dp"
            android:paddingTop="2dp"
            android:text="Понедельник, 21 января"
            android:textColor="#000"
            android:textSize="25dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">
            <!-- ВРЕМЯ -->
            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="90dp"
                android:orientation="vertical">
                <!-- Парметр "ОТ" -->
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:textSize="15sp"
                    android:layout_marginTop="5dp"
                    android:textColor="#5533C7"
                    android:text="8:10" />
                <!-- Парметр "ДО" -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="5dp"
                    android:paddingBottom="5dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:textColor="#5533C7"
                        android:text="9:30"
                        android:textSize="15sp"
                        android:textAlignment="center"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Полоска -->
            <View
                android:layout_marginLeft="5dp"
                android:background="#5533C7"
                android:layout_width="2dp"
                android:layout_height="90dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="8dp"
                android:orientation="vertical">
                <!-- НАЗВАНИЕ -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Математический анализ"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <!-- У КОГО -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="У кого: "
                                android:textColor="#575757"
                                android:textSize="15dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ПИ-18-3"
                                android:textColor="#575757"
                                android:textSize="15dp" />
                        </LinearLayout>
                        <!-- ГДЕ -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Где: "
                                android:textColor="#575757"
                                android:textSize="15dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1 корпус, "
                                android:textColor="#575757"
                                android:textSize="15dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="405 ауд."
                                android:textColor="#575757"
                                android:textSize="15dp" />

                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right|center">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="25dp"
                            android:layout_marginRight="10dp"
                            android:text="Лекция"
                            android:gravity="center"
                            android:textColor="#fff"
                            android:textStyle="bold"
                            android:textSize="15dp"
                            android:background="@drawable/type_day"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#5533C7"/>
    </LinearLayout>


</LinearLayout>